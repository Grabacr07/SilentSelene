<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
					xmlns:chrome="http://schemes.grabacr.net/winfx/2014/chrome">

	<WindowChrome x:Key="DefaultChrome"
				  ResizeBorderThickness="0"
				  GlassFrameThickness="0"
				  CornerRadius="0" />

	<Style x:Key="MetroDialogStyleKey"
		   TargetType="{x:Type metro:MetroWindow}">
		<Setter Property="Width"
				Value="470" />
		<Setter Property="MinHeight"
				Value="150" />
		<Setter Property="Background"
				Value="{DynamicResource ThemeBrushKey}" />
		<Setter Property="Foreground"
				Value="{DynamicResource ActiveForegroundBrushKey}" />
		<Setter Property="BorderBrush"
				Value="{DynamicResource AccentBrushKey}" />
		<Setter Property="Padding"
				Value="0" />
		<Setter Property="ResizeMode"
				Value="NoResize" />
		<Setter Property="SnapsToDevicePixels"
				Value="True" />
		<Setter Property="UseLayoutRounding"
				Value="True" />
		<Setter Property="TextOptions.TextFormattingMode"
				Value="Display" />
        <Setter Property="WindowChrome.WindowChrome">
			<Setter.Value>
				<WindowChrome ResizeBorderThickness="1"
							  GlassFrameThickness="0"
							  CornerRadius="0" />
			</Setter.Value>
		</Setter>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type metro:MetroWindow}">
					<Border Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}"
							SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
							UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
						<AdornerDecorator>
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
									<RowDefinition />
								</Grid.RowDefinitions>

								<Border Background="{DynamicResource SemiactiveBackgroundBrushKey}"
										metro:MetroWindow.IsCaptionBar="True">
									<TextBlock Text="{TemplateBinding Title}"
											   FontFamily="{TemplateBinding FontFamily}"
											   Foreground="{TemplateBinding Foreground}"
											   FontSize="15"
											   Margin="10,7" />
								</Border>
								<ContentPresenter Grid.Row="1"
												  Margin="{TemplateBinding Padding}"
												  LayoutTransform="{TemplateBinding DpiScaleTransform}"
												  TextOptions.TextFormattingMode="{TemplateBinding TextOptions.TextFormattingMode}" />
							</Grid>
						</AdornerDecorator>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="IsActive"
					 Value="False">
				<Setter Property="BorderBrush"
						Value="{DynamicResource BorderBrushKey}" />
			</Trigger>
		</Style.Triggers>
	</Style>

</ResourceDictionary>
